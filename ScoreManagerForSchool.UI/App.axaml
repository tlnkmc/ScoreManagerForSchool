<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="ScoreManagerForSchool.UI.App"
             xmlns:local="using:ScoreManagerForSchool.UI"
             xmlns:converters="using:ScoreManagerForSchool.UI.Converters"
             RequestedThemeVariant="Default">
             <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>
  
        <Application.Resources>
            <converters:EqualsConverter x:Key="EqualsConverter" />
            <converters:BoolToColorConverter x:Key="BoolToColorConverter" />
            <converters:BoolToTextColorConverter x:Key="BoolToTextColorConverter" />
            <converters:BoolToFontWeightConverter x:Key="BoolToFontWeightConverter" />
            <converters:StringToColorConverter x:Key="StringToColorConverter" />
            <converters:StringToBrushConverter x:Key="StringToBrushConverter" />
            <converters:CriticalLevelToBackgroundConverter x:Key="CriticalLevelToBackgroundConverter" />
            <converters:CriticalLevelToForegroundConverter x:Key="CriticalLevelToForegroundConverter" />
        </Application.Resources>
        <Application.Styles>
        <FluentTheme />
    </Application.Styles>
</Application>