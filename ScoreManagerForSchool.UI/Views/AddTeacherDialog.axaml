<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:ScoreManagerForSchool.UI.ViewModels"
        x:Class="ScoreManagerForSchool.UI.Views.AddTeacherDialog"
        Title="新增教师"
        Width="400" Height="350"
        WindowStartupLocation="CenterOwner"
        CanResize="False">

  <Grid RowDefinitions="*,Auto" Margin="16">
    
    <!-- 表单内容 -->
    <Border Grid.Row="0" BorderBrush="#DDD" BorderThickness="1" CornerRadius="8" Padding="16">
      <StackPanel Spacing="12">
        <TextBlock Text="新增教师信息" FontWeight="SemiBold" FontSize="16" HorizontalAlignment="Center"/>
        
        <Grid ColumnDefinitions="80,*" RowDefinitions="Auto,Auto,Auto,Auto" RowSpacing="12" ColumnSpacing="8">
          
          <TextBlock Text="姓名:" Grid.Row="0" VerticalAlignment="Center"/>
          <TextBox x:Name="NameTextBox" Grid.Column="1" Grid.Row="0" 
                   Watermark="请输入教师姓名"/>
          
          <TextBlock Text="科目:" Grid.Row="1" VerticalAlignment="Center"/>
          <TextBox x:Name="SubjectTextBox" Grid.Column="1" Grid.Row="1" 
                   Watermark="请输入任教科目"/>
          
          <TextBlock Text="科目组:" Grid.Row="2" VerticalAlignment="Center"/>
          <TextBox x:Name="SubjectGroupTextBox" Grid.Column="1" Grid.Row="2" 
                   Watermark="请输入科目组"/>
          
          <TextBlock Text="班级:" Grid.Row="3" VerticalAlignment="Top" Margin="0,4,0,0"/>
          <TextBox x:Name="ClassesTextBox" Grid.Column="1" Grid.Row="3" 
                   Watermark="用分号分隔，如：一班;二班"
                   AcceptsReturn="True" TextWrapping="Wrap" MinHeight="60"/>
          
        </Grid>
      </StackPanel>
    </Border>
    
    <!-- 按钮区域 -->
    <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" 
                Spacing="8" Margin="0,16,0,0">
      <Button Content="取消" Click="OnCancelClick" MinWidth="80"/>
      <Button Content="确定" Click="OnOkClick" MinWidth="80" 
              Classes="accent" IsDefault="True"/>
    </StackPanel>
    
  </Grid>
</Window>
