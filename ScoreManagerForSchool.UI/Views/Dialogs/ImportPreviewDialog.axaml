<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="ScoreManagerForSchool.UI.Views.Dialogs.ImportPreviewDialog"
        Title="导入预览与映射" Width="800" Height="580">
  <Grid RowDefinitions="Auto,Auto,*,Auto" Margin="12" RowSpacing="12">
    
    <!-- 文件路径提示 -->
    <StackPanel Orientation="Horizontal" Spacing="8">
      <TextBlock Text="文件路径:" VerticalAlignment="Center" FontWeight="Bold"/>
      <TextBlock x:Name="PathDisplay" Text="未选择文件" VerticalAlignment="Center" Foreground="Gray"/>
    </StackPanel>

    <!-- 映射配置区域 -->
    <Grid RowDefinitions="Auto,Auto" ColumnDefinitions="*,*,*,*" ColumnSpacing="12" RowSpacing="8">
      <StackPanel Grid.Row="0" Grid.Column="0" Spacing="4">
        <TextBlock Text="班级列" FontWeight="SemiBold"/>
        <ComboBox x:Name="ClassColBox" Width="120"/>
      </StackPanel>
      
      <StackPanel Grid.Row="0" Grid.Column="1" Spacing="4">
        <TextBlock Text="学号列" FontWeight="SemiBold"/>
        <ComboBox x:Name="IdColBox" Width="120"/>
      </StackPanel>
      
      <StackPanel Grid.Row="0" Grid.Column="2" Spacing="4">
        <TextBlock Text="姓名列" FontWeight="SemiBold"/>
        <ComboBox x:Name="NameColBox" Width="120"/>
      </StackPanel>
      
      <StackPanel Grid.Row="0" Grid.Column="3" Spacing="4">
        <TextBlock Text="第一行数据行" FontWeight="SemiBold"/>
        <ComboBox x:Name="FirstDataRowBox" Width="120"/>
      </StackPanel>
      
      <CheckBox Grid.Row="1" Grid.Column="0" x:Name="HeaderCheck" IsChecked="True" Content="包含表头行" VerticalAlignment="Center"/>
    </Grid>

    <!-- 预览数据表格 -->
    <Border Grid.Row="2" BorderBrush="LightGray" BorderThickness="1" CornerRadius="4">
      <DataGrid x:Name="PreviewGrid" AutoGenerateColumns="True" IsReadOnly="True" 
                GridLinesVisibility="All" HeadersVisibility="All"/>
    </Border>

    <!-- 底部按钮 -->
    <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Spacing="12">
      <Button Content="导入并保存" x:Name="ImportBtn" MinWidth="100" Background="DodgerBlue" Foreground="White"/>
      <Button Content="取消" x:Name="CancelBtn" MinWidth="80"/>
    </StackPanel>
  </Grid>
</Window>
