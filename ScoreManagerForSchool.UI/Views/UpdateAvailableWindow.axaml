<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:svc="clr-namespace:ScoreManagerForSchool.UI.Services"
        x:Class="ScoreManagerForSchool.UI.Views.UpdateAvailableWindow"
        mc:Ignorable="d"
        Width="460" Height="320"
        CanResize="False"
        Title="发现新版本">
  <Design.DataContext>
    <Object>
      <x:Property Name="Version" Type="x:String">1.2.3</x:Property>
      <x:Property Name="Notes" Type="x:String">一些更新说明...</x:Property>
    </Object>
  </Design.DataContext>
  <Border Padding="16">
    <Grid RowDefinitions="Auto,* ,Auto" ColumnDefinitions="*" x:DataType="svc:UpdateInfo">
      <StackPanel Spacing="4">
        <TextBlock Text="检测到新版本" FontSize="18" FontWeight="Bold"/>
        <TextBlock>
          <Run Text="最新版本："/>
          <Run Text="{Binding Version}"/>
        </TextBlock>
      </StackPanel>
      <Border Grid.Row="1" Margin="0,12,0,12" Padding="10" CornerRadius="6" Background="{DynamicResource ThemeControlLowBrush}">
        <ScrollViewer>
          <TextBlock Text="{Binding Notes}" TextWrapping="Wrap"/>
        </ScrollViewer>
      </Border>
      <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Spacing="10">
        <Button Content="立即更新" Click="OnUpdateNow"/>
        <Button Content="关闭" IsDefault="True" Click="OnClose"/>
      </StackPanel>
    </Grid>
  </Border>
</Window>
